<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textoMailUsuario"
        android:textAlignment="center"
        android:textColor="@color/marfil"
        android:background="@color/paleta0"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/HDfondo"
        android:layout_below="@id/textoMailUsuario"
        android:background="@color/paleta0"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logofilm"
        android:id="@+id/HDimagen"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:scaleX="0.8"
        android:scaleY="0.8"

        />

    <Button
        android:id="@+id/botonNavView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton"
        android:onClick="botonNavViewApretado"
        android:text=""
        android:textColor="@color/marfil"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/HDfondo"
        android:layout_marginBottom="5dp"
        android:scaleY="0.8"
        android:scaleX="0.8"
        />



</RelativeLayout>