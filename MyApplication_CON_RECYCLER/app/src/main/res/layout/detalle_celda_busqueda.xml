<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/paleta0"
    android:layout_height="@dimen/altoLayoutTarjetaBusqueda"
    tools:context="com.craps.myapplication.View.Activities.ActivityLogin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/altoImagenTarjetaBusqueda"

        android:elevation="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"


        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:orientation="horizontal">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="@dimen/anchoImagenTarjetaBusqueda"
            android:layout_height="@dimen/altoImagenTarjetaBusqueda"
            android:background="#000000"
            android:layout_gravity="left"
            >

            <ImageView
                android:id="@+id/peli_img_celda"
                android:layout_width="@dimen/anchoImagenTarjetaBusqueda"
                android:layout_height="@dimen/altoImagenTarjetaBusqueda"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/strange"
                />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/favheart"
                android:id="@+id/boton_favo"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:layout_marginRight="4dp"
                android:elevation="6dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/altoImagenTarjetaBusqueda"
            android:background="@color/paleta0"
            >
            <TextView
                android:id="@+id/peli_texto_celda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/paleta4"
                android:text="texto de prueba"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:paddingTop="2dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                />

                <android.support.v7.widget.AppCompatRatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingbar"
                android:layout_below="@id/peli_texto_celda"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingbar"
                android:textColor="@color/marfil"
                android:textAlignment="center"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:maxLines="3"
                android:id="@+id/detalleBusqueda"
                android:layout_marginTop="16dp"
                android:text="texto de prueba, esto es un texto de prueba. Si, de Prueba, un texto de prueba"/>

        </RelativeLayout>




















        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>




