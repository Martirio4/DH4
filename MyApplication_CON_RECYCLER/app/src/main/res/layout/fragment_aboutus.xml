<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.craps.myapplication.View.Fragments.FragmentAboutUs"
    android:background="@color/paleta0">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Martin Riso"
        android:textColor="@color/paleta4"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:id="@+id/riso"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:fontFamily="serif-monospace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pablo Delgado"
        android:textSize="15sp"
        android:id="@+id/delgado"
        android:textColor="@color/paleta4"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:layout_above="@id/riso"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/paleta4"
        android:layout_height="wrap_content"
        android:text="Juan ignacio Lopez Guardone"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/delgado"
        android:id="@+id/lopez"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crappy Entertainment"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/marfil"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lopez"
        android:id="@+id/crappy"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:id="@+id/titulo"
        android:textColor="@color/paleta4"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_above="@id/crappy"
        android:fontFamily="serif-monospace"/>







</RelativeLayout>
