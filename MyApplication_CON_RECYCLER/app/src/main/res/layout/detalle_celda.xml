<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/anchoLayoutTarjeta"
    android:orientation="vertical"

    android:layout_height="@dimen/altoLayoutTarjeta"
    tools:context="com.craps.myapplication.View.Activities.ActivityLogin">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/anchoTarjeta"
        android:layout_height="@dimen/altoTarjeta"
        app:cardElevation="5dp"
        android:background="@color/paleta3"
        android:layout_centerInParent="true"
        app:cardCornerRadius="0dp"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="@dimen/anchoTarjeta"
            android:layout_height="@dimen/altoLayoutTarjeta"
            android:background="@color/paleta3"
            android:layout_gravity="center_horizontal"


            >

            <ImageView
                android:id="@+id/peli_img_celda"
                android:layout_width="@dimen/anchoImagenTarjeta"
                android:layout_height="@dimen/altoImagenTarjeta"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/strange"
                />

            <ImageButton
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/favheart"
                android:id="@+id/boton_favo"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_marginTop="1dp"
                android:layout_below="@id/peli_img_celda"
                android:layout_alignParentRight="true"
                android:visibility="gone"

                android:layout_marginRight="4dp"
                android:elevation="6dp"/>
            <android.support.v7.widget.AppCompatRatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingbar"
                android:scaleX=".9"
                android:scaleY="1"
                android:layout_below="@id/peli_img_celda"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                 />




        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>




