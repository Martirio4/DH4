<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">#4db6ac</item>
        <item name="colorControlActivated">@color/paleta4</item>
        <item name="colorControlHighlight">@color/paleta3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#e57373</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FABGreen">
        <item name="fab_colorNormal">#43A047</item>
        <item name="fab_colorPressed">#2E7D32</item>
        <item name="fab_colorRipple">#1B5E20</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/marfil</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/marfil</item>
    </style>





    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/paleta0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/paleta4</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>

    </style>







</resources>
